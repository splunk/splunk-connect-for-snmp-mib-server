   ::= { aviciSonetObjects 3 }

aviciSonetLineEntry OBJECT-TYPE
   SYNTAX         AviciSonetLineEntry
   MAX-ACCESS     not-accessible
   STATUS         current
   DESCRIPTION
      "An entry in the Avici SONET/SDH line table."
   INDEX          { ifIndex }
   ::= { aviciSonetLineTable 1 }

AviciSonetLineEntry ::=
   SEQUENCE {
      aviciSonetLineS1                      Integer32,
      aviciSonetLineAPS                     Integer32,
      aviciSonetLineThresholdES             Unsigned32,
      aviciSonetLineThresholdSES            Unsigned32,
      aviciSonetLineThresholdCV             Unsigned32,
      aviciSonetLineThresholdUAS            Unsigned32,
      aviciSonetLineEventEnable             Integer32,
      aviciSonetLineEventStatus             Integer32,
      aviciSonetLineEventIndex              Integer32,
      aviciSonetLineCurrentFailures         Integer32
   }

aviciSonetLineS1 OBJECT-TYPE
   SYNTAX         Integer32 (0..255)
   MAX-ACCESS     read-create
   STATUS         current
   DESCRIPTION    
      "This variable specifies the value to which the line entity sets the
      S1 byte of the SONET/SDH line overhead for all outbound frames."
   DEFVAL { 0 }
   ::= { aviciSonetLineEntry 1 }

aviciSonetLineAPS OBJECT-TYPE
   SYNTAX         Integer32 (0..65535)
   MAX-ACCESS     read-create
   STATUS         current
   DESCRIPTION    
      "This variable specifies the value to which the line entity sets the
      K1 and K2 bytes of the SONET/SDH line overhead for all outbound frames."
   DEFVAL { 0 }
   ::= { aviciSonetLineEntry 2 }

aviciSonetLineThresholdES OBJECT-TYPE
   SYNTAX         Unsigned32 (1..900)
   MAX-ACCESS     read-create
   STATUS         current
   DESCRIPTION    
      "This variable specifies a threshold for the number of Errored Seconds
      encountered by the SONET/SDH line entity in the current fifteen minute
