aviciSonetFarEndPathTable OBJECT-TYPE
   SYNTAX         SEQUENCE OF AviciSonetFarEndPathEntry
   MAX-ACCESS     not-accessible
   STATUS         current
   DESCRIPTION
      "The Avici SONET/SDH far end path table."
   ::= { aviciSonetObjects 6 }

aviciSonetFarEndPathEntry OBJECT-TYPE
   SYNTAX         AviciSonetFarEndPathEntry
   MAX-ACCESS     not-accessible
   STATUS         current
   DESCRIPTION
      "An entry in the Avici SONET/SDH far end path table."
   INDEX          { ifIndex }
   ::= { aviciSonetFarEndPathTable 1 }

AviciSonetFarEndPathEntry ::=
   SEQUENCE {
      aviciSonetFarEndPathThresholdES       Unsigned32,
      aviciSonetFarEndPathThresholdSES      Unsigned32,
      aviciSonetFarEndPathThresholdCV       Unsigned32,
      aviciSonetFarEndPathThresholdUAS      Unsigned32,
      aviciSonetFarEndPathEventEnable       Integer32,
      aviciSonetFarEndPathEventStatus       Integer32,
      aviciSonetFarEndPathEventIndex        Integer32
   }

aviciSonetFarEndPathThresholdES OBJECT-TYPE
   SYNTAX         Unsigned32 (1..900)
   MAX-ACCESS     read-create
   STATUS         current
   DESCRIPTION    
      "This variable specifies a threshold for the number of Far End Errored
      Seconds encountered by the SONET/SDH path entity in the current 15 minute
      interval.  If the value of sonetFarEndPathCurrentESs becomes greater
      than or equal to this value in the current fifteen minute interval, then
      a single aviciSonetFarEndPathEvent notification will be generated."
   DEFVAL { 1 }
   ::= { aviciSonetFarEndPathEntry 1 }

aviciSonetFarEndPathThresholdSES OBJECT-TYPE
   SYNTAX         Unsigned32 (1..900)
   MAX-ACCESS     read-create
   STATUS         current
   DESCRIPTION    
      "This variable specifies a threshold for the number of Far End Severely
      Errored Seconds encountered by the SONET/SDH path entity in the current
      fifteen minute interval.  If the value of sonetFarEndPathCurrentSESs
      becomes greater than or equal to this value in the current fifteen minute
      interval, then a single aviciSonetFarEndPathEvent notification will be
      generated."
   DEFVAL { 1 }
   ::= { aviciSonetFarEndPathEntry 2 }

aviciSonetFarEndPathThresholdCV OBJECT-TYPE
   SYNTAX         Unsigned32 (1..4294967295)
   MAX-ACCESS     read-create
   STATUS         current
   DESCRIPTION    
      "This variable specifies a threshold for the number of Far End Coding
      Violations encountered by the SONET/SDH path entity in the current
      fifteen minute interval.  If the value of sonetFarEndPathCurrentCVs
