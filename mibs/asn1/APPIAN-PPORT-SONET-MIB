    SYNTAX  AcSonetPathRDIEntry
    MAX-ACCESS  not-accessible
    STATUS  current
    DESCRIPTION
       "An entry in the SONET/SDH Path RDI Table."
    INDEX  { 
        acSonetPathRDINodeId, 
        acSonetPathRDISlot, 
        acSonetPathRDIPort, 
        acSonetPathRDIPath 
    }
    
    ::= { acSonetPathRDITable 1 }
    
AcSonetPathRDIEntry ::=
    SEQUENCE {
         acSonetPathRDINodeId            AcNodeId,
         acSonetPathRDISlot              AcSlotNumber,
         acSonetPathRDIPort              AcPortNumber,
         acSonetPathRDIPath              INTEGER,
         acSonetPathRDIOpMode            INTEGER
     }

